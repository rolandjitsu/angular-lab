{
	"database": {
		"rules": "./rules.json"
	},
	"hosting": {
		"public": "dist",
		"headers": [
			{
				"source": "**/*.@(js|html|css|map)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			}
		],
		"ignore": [
			"./e2e",
			"./jspm_packages",
			"./node_modules",
			"./scripts",
			"./src",
			"./test",
			"./typings",
			"./.*",
			"browsers.config.js",
			"bs.config.js",
			"firebase.json",
			"gulpfile.js",
			"./jspm.config.js",
			"karma.config.js",
			"./LICENSE",
			"package.json",
			"protractor.config.js",
			"./README.md",
			"rules.json",
			"tsconfig.js",
			"tslint.json",
			"typings.json"
		]
	}
}
